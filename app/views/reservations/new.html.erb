<div class="container">
  <h1>Rent a game!</h1>
  <%= simple_form_for(@reservation) do |f| %>
    <%= f.input :start_date, placeholder: "Choose your date", label: "When would you like to rent ?", as: :string, required: false, input_html: {class: "datepicker"} %>
    <%#= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :game, collection: Game.all %>
    <%= f.submit %>
  <% end %>
  <%= link_to "Back to games list", games_path %>
</div>
