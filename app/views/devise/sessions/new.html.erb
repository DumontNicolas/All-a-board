<div class="container">  
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="container-login">
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    </div>
    <div class="hbtn hb-fill-on">
      <%= f.button :submit, "Log in"%>
      <% if user_signed_in? == false %>
        <div class="flash flash-danger alert alert-dismissible fade show" role="alert">
          <span><strong>Wrong Email or Password</strong> a problem has occurred while processing login.</span>
          <a data-dismiss="alert" aria-label="Close">
            <i class="fas fa-times"></i>
          </a>
        </div>
      <% end %>
    </div>
  <% end %>

  <br>
  <br>

  <%= render "devise/shared/links" %>
</div>

